<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_destacado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_top"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="7dp"

        card_view:cardElevation="1dp"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardPreventCornerOverlap="false"
        android:clickable="true"

        android:focusable="true"

        >
        <FrameLayout

            android:id="@+id/frame_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgv_promocion_destacada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:scaleType="centerCrop"
                android:src="@drawable/img_destacado_2"
                android:contentDescription="@string/app_name" />

            <TextView

                android:id="@+id/tv_promocion_destacada_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="10dp"
                android:background="@color/colorblacktransparent"

                android:fontFamily="sans-serif-condensed-light"

                android:textAlignment="center"


                android:text="Nombre del Negocio"

                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textColor="@android:color/white"


                android:textSize="@dimen/headerMoreTextSize"
                android:textStyle="bold" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
