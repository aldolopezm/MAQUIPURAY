<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_negocio_producto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"

    android:focusable="true"

    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"

    app:cardElevation=".2dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"

        android:weightSum="1"


        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgv_promocion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/img_destacado_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_promocion_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coca Cola 2L"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="promocion valida hasta \n21/09/20"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_promocion_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0201"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_promocion_descuento"
                style="@style/viewParent.headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20%"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>

